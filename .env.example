# .env.example - Rename to .env and fill in your actual values

# Telegram Bot Token from BotFather
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN_HERE"

# Google Gemini API Key from Google AI Studio
GEMINI_API_KEY="YOUR_GEMINI_API_KEY_HERE"

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOGGING_LEVEL="INFO"
LOG_FILE_PATH="logs/bot_errors.log"

# PDF Processing Settings
MAX_FILE_SIZE_MB=20
MIN_TEXT_LENGTH=50

# Report Generation Settings
REPORT_TEMPLATE_PATH="data/templates/report_template.docx" # Or .txt, .html etc.
GENERATED_REPORTS_PATH="data/generated_reports/"
